
<%-include('partials/header');-%>
<h1>Home</h1>
<p><%=hsc%> </p>
<% listpost.forEach(function(post){%>
<h2><%=post.title%></h2>
<p><%=post.body.slice(0,100)+ '...'%><a href="/posts/<%=post.url%>" target="_blank"> Read more</a></p>
